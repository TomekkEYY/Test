<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/ll_quests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            style="@style/TopLogo"
            android:src="@drawable/quests" />

        <LinearLayout style="@style/SeparatorLinearLayout" >

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>

            <View style="@style/SeparatorWhiteSpaceBorder" >
            </View>

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>
        </LinearLayout>

        <!-- START BASICS -->

        <Button
            android:id="@+id/basics_quests"
            style="@style/ViewToggleButton"
            android:text="@string/basics_quests" />

        <TextView
            android:id="@+id/basics_quests_blank"
            android:layout_width="@dimen/blank_width_size"
            android:layout_height="@dimen/blank_height_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/basics_quests_text"
            style="@style/StandardTextAppearance"
            android:text="@string/basics_quests_text"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/signet_bags"
            style="@style/TopLogo"
            android:src="@drawable/signet_bags"
            android:visibility="gone" />

        <TextView
            android:id="@+id/basics_quests_text2"
            style="@style/StandardTextAppearance"
            android:text="@string/basics_quests_text2"
            android:visibility="gone" />

        <Button
            android:id="@+id/basics_quests_close"
            style="@style/ViewToggleButtonRight"
            android:text="@string/basics_quests_close"
            android:visibility="gone" />
        <!-- END BASICS -->

        <LinearLayout style="@style/SeparatorLinearLayout" >

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>

            <View style="@style/SeparatorWhiteSpaceBorder" >
            </View>

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>
        </LinearLayout>

        <Button
            style="@style/ViewToggleButton"
            android:onClick="startSolomonBlueQuest"
            android:text="@string/solomon_blue_titel" />

        <TextView
            android:id="@+id/all_signets_blank"
            android:layout_width="@dimen/blank_width_size"
            android:layout_height="@dimen/blank_height_size"
            android:visibility="visible" />

        <LinearLayout style="@style/SeparatorLinearLayout" >

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>

            <View style="@style/SeparatorWhiteSpaceBorder" >
            </View>

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>
        </LinearLayout>

        <Button
            style="@style/ViewToggleButton"
            android:onClick="startEgyptScorchedQuest"
            android:text="@string/egypt_scorched_titel" />

        <TextView
            android:layout_width="@dimen/blank_width_size"
            android:layout_height="@dimen/blank_height_size"
            android:visibility="visible" />

        <LinearLayout style="@style/SeparatorLinearLayout" >

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>

            <View style="@style/SeparatorWhiteSpaceBorder" >
            </View>

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>
        </LinearLayout>

        <Button
            style="@style/ViewToggleButton"
            android:onClick="startEgyptSunQuest"
            android:text="@string/egypt_sun_titel" />

        <TextView
            android:layout_width="@dimen/blank_width_size"
            android:layout_height="@dimen/blank_height_size"
            android:visibility="visible" />

        <LinearLayout style="@style/SeparatorLinearLayout" >

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>

            <View style="@style/SeparatorWhiteSpaceBorder" >
            </View>

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>
        </LinearLayout>

        <Button
            style="@style/ViewToggleButton"
            android:onClick="startTransFarmQuest"
            android:text="@string/trans_farm_titel" />

        <TextView
            android:id="@+id/healer_signets_blank"
            android:layout_width="@dimen/blank_width_size"
            android:layout_height="@dimen/blank_height_size"
            android:visibility="visible" />

        <LinearLayout style="@style/SeparatorLinearLayout" >

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>

            <View style="@style/SeparatorWhiteSpaceBorder" >
            </View>

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>
        </LinearLayout>

        <Button
            style="@style/ViewToggleButton"
            android:onClick="startTransForestQuest"
            android:text="@string/trans_forest_titel" />

        <TextView
            android:id="@+id/healer_signets_blank"
            android:layout_width="@dimen/blank_width_size"
            android:layout_height="@dimen/blank_height_size"
            android:visibility="visible" />

        <LinearLayout style="@style/SeparatorLinearLayout" >

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>

            <View style="@style/SeparatorWhiteSpaceBorder" >
            </View>

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>
        </LinearLayout>

        <Button
            style="@style/ViewToggleButton"
            android:onClick="startTransFangsQuest"
            android:text="@string/trans_fangs_titel" />

        <TextView
            android:layout_width="@dimen/blank_width_size"
            android:layout_height="@dimen/blank_height_size"
            android:visibility="visible" />

        <LinearLayout style="@style/SeparatorLinearLayout" >

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>

            <View style="@style/SeparatorWhiteSpaceBorder" >
            </View>

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>
        </LinearLayout>
    </LinearLayout>

</ScrollView>