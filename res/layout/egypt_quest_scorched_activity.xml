<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/ll_egypt_scorched_quest_locations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            style="@style/TopLogo"
            android:src="@drawable/scorched_desert" />

        <LinearLayout style="@style/SeparatorLinearLayout" >

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>

            <View style="@style/SeparatorWhiteSpaceBorder" >
            </View>

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>
        </LinearLayout>

        <!-- START Scorched Desert -->

        <TextView
            android:id="@+id/map_scorched_quest1_text"
            style="@style/StandardTextAppearance"
            android:text="@string/map_scorched_quest1_text" />

        <Button
            style="@style/ViewToggleButton"
            android:onClick="openScorchedMapMarked"
            android:text="@string/framing_locations_go_to_map_activity" />

        <LinearLayout style="@style/SeparatorLinearLayout" >

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>

            <View style="@style/SeparatorWhiteSpaceBorder" >
            </View>

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>
        </LinearLayout>

        <TextView
            android:id="@+id/map_scorched_quest2_text"
            style="@style/StandardTextAppearance"
            android:text="@string/map_scorched_quest2_text" />

        <Button
            style="@style/ViewToggleButton"
            android:onClick="openScorchedMapMarked"
            android:text="@string/framing_locations_go_to_map_activity" />

        <!-- END Scorched Desert -->

        <LinearLayout style="@style/SeparatorLinearLayout" >

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>

            <View style="@style/SeparatorWhiteSpaceBorder" >
            </View>

            <View style="@style/SeparatorBlackSpaceBorder" >
            </View>
        </LinearLayout>
    </LinearLayout>

</ScrollView>