<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gesture-image="http://schemas.polites.com/android"
    android:id="@+id/ll_king_map_marked"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <ImageView
        style="@style/TopLogo"
        android:src="@drawable/kingsmouth" />

    <LinearLayout style="@style/SeparatorLinearLayout" >

        <View style="@style/SeparatorBlackSpaceBorder" >
        </View>

        <View style="@style/SeparatorWhiteSpaceBorder" >
        </View>

        <View style="@style/SeparatorBlackSpaceBorder" >
        </View>
    </LinearLayout>

    <ImageView
        android:id="@+id/legend_map"
        style="@style/Legend"
        android:src="@drawable/legend_map" />

    <LinearLayout style="@style/SeparatorLinearLayout" >

        <View style="@style/SeparatorBlackSpaceBorder" >
        </View>

        <View style="@style/SeparatorWhiteSpaceBorder" >
        </View>

        <View style="@style/SeparatorBlackSpaceBorder" >
        </View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_king_map_marked_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top" >
    </LinearLayout>

</LinearLayout>